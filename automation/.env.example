# Binance API Kimlik Bilgileri
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_key_here

# Webhook Güvenlik
WEBHOOK_SECRET=your_secure_random_string_here

# İşlem Ayarları
DEFAULT_RISK_PERCENT=1.0
# Maks açık pozisyon adedi (v2 bot için)
MAX_OPEN_POSITIONS=5
# Minimum USDT işlem tutarı (pozisyon büyüklüğü hesabı için alt sınır)
MIN_USDT_ORDER=10
# Eski: MAX_POSITION_SIZE (kullanılmıyor)
# MAX_POSITION_SIZE=100
USE_TESTNET=true
# Opsiyonel: Ayrı testnet anahtarları kullanıyorsanız
# TESTNET_API_KEY=your_testnet_key
# TESTNET_API_SECRET=your_testnet_secret

# Database
DB_PATH=./positions.db

# Log Seviyesi (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Dashboard Erişim Koruması (opsiyonel)
# Tarayıcıdan Bearer token veya ?token= ile iletebilirsiniz
DASHBOARD_AUTH_TOKEN=your_dashboard_token_here

# Binance Future/Spot Seçimi
TRADING_MODE=spot
# spot veya futures

# Leverage (sadece futures için)
LEVERAGE=3

# Gelişmiş Risk Yönetimi (opsiyonel)
ENABLE_TRAILING_STOP=true
TRAILING_STOP_PERCENT=1.5
ENABLE_PARTIAL_CLOSE=true
PARTIAL_CLOSE_PERCENT=50

# Telegram Bildirimleri (opsiyonel)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Sunucu Ayarları
HOST=0.0.0.0
PORT=8000

# TradingView Alert URL (deployment sonrası doldur)
# https://your-app-name.onrender.com/webhook
